<?xml version="1.0"?>
<phpunit
        bootstrap="_bootstrap.php"
        convertErrorsToExceptions="true"
        convertNoticesToExceptions="true"
        convertWarningsToExceptions="true"
        stopOnFailure="true"
        processIsolation="false"
        backupGlobals="false"
        syntaxCheck="true"
        strict="true"
        colors="true"
        >
    <testsuite name="all">
        <directory>./Tests</directory>
    </testsuite>
</phpunit>
